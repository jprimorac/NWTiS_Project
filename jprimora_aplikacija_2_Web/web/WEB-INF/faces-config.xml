<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>org.foi.nwtis.jprimora.i18n</base-name>
            <var>m</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>/prijava.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{prijava.prijaviKorisnika()}</from-action>
            <from-outcome>LOGIN</from-outcome>
            <to-view-id>/prijava.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.prijaviKorisnika()}</from-action>
            <from-outcome>ADMIN</from-outcome>
            <to-view-id>/admin/pregledKorisnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.prijaviKorisnika()}</from-action>
            <from-outcome>USER</from-outcome>
            <to-view-id>/korisnik/azuriranjePodataka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registracija.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registracija.registrirajKorisnika()}</from-action>
            <from-outcome>REGISTER</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registracija.registrirajKorisnika()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/korisnik/azuriranjePodataka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/pregledKorisnika.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledKorisnika.azurirajKorisnika()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/admin/azuriranjeKorisnika.xhtml</to-view-id>
        </navigation-case>  
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/odjava.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{odjava.odjaviKorisnika()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>      
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/citanjePoruke.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{citanjePoruke.povratakPregledPoruka()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/admin/pregledPoruka.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/pregledPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledPoruka.otvoriPoruku()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/admin/citanjePoruke.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>

</faces-config>
